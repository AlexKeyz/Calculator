<Window x:Class="SuperCalculatorKeyzerov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperCalculatorKeyzerov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox1" Width="350" Height="30" VerticalAlignment="Top" Margin="20, 50" />
        <Button x:Name="button1"  Width="100" Height="30" Content="Ответить" Click="Button_Click" />
        <TextBox x:Name="textBox2" Width="350" Height="30" VerticalAlignment="Bottom" Margin="20, 50" />
        <TextBlock x:Name="Text1" Text="Ввод"  
           FontSize="20" 
           Foreground="Black" 
           Background="White" 
           TextWrapping="Wrap" 
           Margin="10"
           VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBlock x:Name="Text2" Text="Вывод"  
           FontSize="20" 
           Foreground="Black" 
           Background="White" 
           TextWrapping="Wrap" 
           Margin="85"
           VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</Window>
